<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wh.whtth.idao.CityMapper" >
  <resultMap id="BaseResultMap" type="com.wh.whtth.model.City" >
    <result column="id" property="id" jdbcType="BIGINT" />
    <result column="type" property="type" jdbcType="INTEGER" />
    <result column="code" property="code" jdbcType="INTEGER" />
    <result column="pcode" property="pcode" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
  </resultMap>
  <insert id="insert" parameterType="com.wh.whtth.model.City" >
    insert into wh_city (id, type, code, 
      pcode, name)
    values (#{id,jdbcType=BIGINT}, #{type,jdbcType=INTEGER}, #{code,jdbcType=INTEGER}, 
      #{pcode,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" parameterType="com.wh.whtth.model.City" >
    insert into wh_city
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="type != null" >
        type,
      </if>
      <if test="code != null" >
        code,
      </if>
      <if test="pcode != null" >
        pcode,
      </if>
      <if test="name != null" >
        name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=BIGINT},
      </if>
      <if test="type != null" >
        #{type,jdbcType=INTEGER},
      </if>
      <if test="code != null" >
        #{code,jdbcType=INTEGER},
      </if>
      <if test="pcode != null" >
        #{pcode,jdbcType=INTEGER},
      </if>
      <if test="name != null" >
        #{name,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  
  <resultMap id="mapResultMap" type="java.util.Map" />
  <select id="listProvince" resultMap="mapResultMap">
  	SELECT 
	    code, name
	FROM
	    wh.wh_city
	WHERE
	    type = 1
	order by code
  </select>
  
  <select id="listCityUnderProv" resultMap="mapResultMap">
  SELECT 
	    code, name
	FROM
	    wh.wh_city
	WHERE
	    pcode = #{code,jdbcType=VARCHAR}
	order by code
  </select>
  
  <select id="findCityByCode" resultMap="java.lang.String">
  SELECT 
	    name
	FROM
	    wh.wh_city
	WHERE
	    code = #{code,jdbcType=VARCHAR}
  </select>
</mapper>